{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@list-app/api/lists/feature": ["libs/api/lists/feature/src/index.ts"],
      "@list-app/api/public/feature": ["libs/api/public/feature/src/index.ts"],
      "@list-app/api/shared/data-access": [
        "libs/api/shared/data-access/src/index.ts"
      ],
      "@list-app/api/shares/feature": ["libs/api/shares/feature/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
